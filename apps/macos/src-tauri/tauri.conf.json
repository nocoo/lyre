{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/crates/tauri-cli/schema.json",
  "productName": "Lyre",
  "version": "1.3.0",
  "identifier": "com.lyre.app",
  "build": {
    "beforeDevCommand": "cd frontend && bun run dev",
    "beforeBuildCommand": "cd frontend && bun run build",
    "devUrl": "http://localhost:1420",
    "frontendDist": "../frontend/out"
  },
  "app": {
    "withGlobalTauri": false,
    "windows": [
      {
        "label": "main",
        "title": "Lyre",
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "width": 480,
        "height": 520,
        "resizable": true,
        "visible": false,
        "decorations": true,
        "center": true,
        "minWidth": 380,
        "minHeight": 400
      }
    ],
    "security": {
      "assetProtocol": {
        "enable": true,
        "scope": ["$AUDIO/**", "$HOME/Music/**"]
      },
      "csp": "default-src 'self' ipc: http://ipc.localhost; media-src 'self' asset: http://asset.localhost",
      "capabilities": ["default"]
    }
  },
  "bundle": {
    "active": true,
    "targets": ["dmg", "app"],
    "icon": [
      "icons/icon.icns",
      "icons/icon.png",
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png"
    ],
    "macOS": {
      "minimumSystemVersion": "13.0"
    }
  }
}
